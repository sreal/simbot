# Interface Controls
# IMPORTANT: Run ONE interface per process for best reliability
# For production: run separate processes with different settings
#   Process 1: ENABLE_SLACK=true ENABLE_MCP=false  (Slack bot)
#   Process 2: ENABLE_SLACK=false ENABLE_MCP=true  (MCP server)
# Setting both to true will result in an error
ENABLE_SLACK=true
ENABLE_MCP=false

# MCP Server Configuration (only used when ENABLE_MCP=true)
# Transport options: stdio (for local clients like Claude Desktop) or http (for remote access via nginx)
MCP_TRANSPORT=stdio
MCP_HOST=0.0.0.0
MCP_PORT=8080

# Slack API Credentials
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Feature Flags (default: disabled, opt-in)
ENABLE_DOMAIN_SQL=true

# Query Definitions Path (for Docker volume mount)
# Set this to the path where YAML query definitions are mounted
QUERY_DEFINITIONS_PATH=/app/queries

# Database Connection (single generic example)
# Generic format: DRIVER={ODBC Driver 18 for SQL Server};SERVER=<host>;DATABASE=<db>;UID=<user>;PWD=<pass>;Encrypt=yes;TrustServerCertificate=no;Connection Timeout=30;
DB_CONNECTION_STRING=DRIVER={ODBC Driver 18 for SQL Server};SERVER=<server-hostname>;DATABASE=<database-name>;UID=<username>;PWD=<password>;Encrypt=yes;TrustServerCertificate=no;Connection Timeout=30;

# Example Query (used by Domain SQL features)
# Replace table/columns to suit your schema
EXAMPLE_SQL_QUERY=SELECT TOP 10 id, name FROM <schema>.<table> ORDER BY id DESC;

# Logging
LOG_LEVEL=INFO
